%footer.global-footer#page-foot
  .container
    %ul.footer-links
      %li
        = link_to "Register a bike", choose_registration_path
        %ul
          %li
            = link_to "BikeDeed partner organizations", where_path         
          %li
            = link_to "BikeDeed resources", resources_path
          
      %li
        = link_to "About BikeDeed", about_path  
        %ul       
          %li
            = link_to "BikeDeed news", news_index_path
          %li
            = link_to "List of manufacturers", manufacturers_path
          %li
            = link_to "Donate to BikeDeed", support_the_index_path
         
      %li.contact-nav-btns
        = link_to "Help", help_path
        %ul
          %li
            = link_to "Contact us", help_path(anchor: 'contact_us_section')
            = link_to "Sign up a shop or organization", new_organization_path
            = link_to "API Documentation", documentation_index_path
            
      %li.social
        %ul
          %li
            = link_to image_tag("facebook.svg", alt: "BikeDeed Facebook"), "https://facebook.com/BikeDeed", class: 'footer-facebook'
          %li
            = link_to image_tag("twitter.svg", alt: "BikeDeed Twitter"), "https://twitter.com/BikeDeed", class: 'footer-twitter'
          %li
            = link_to image_tag("instagram.svg", alt: "BikeDeed Instagram"), "http://instagram.com/BikeDeed/", class: 'footer-instagram'

    %p
      %span{data: {license: "https://github.com/bikeindex/bike_index/blob/master/LICENSE"}}
        #{Time.zone.now.year} &copy; BikeDeed.
      - if current_user.present? && current_user.has_membership?
        #{link_to "Privacy policy", privacy_path}, #{link_to "vendor terms", vendor_terms_path}
      - else
        #{link_to "Privacy policy", privacy_path}
      and #{link_to "terms and conditions", terms_path}.